extends layout

block content

	nav.navbar.navbar-inverse.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') Entertainment system

			#navbar.navbar-collapse.collapse
				form#signinForm.navbar-form.navbar-right
					.form-group
						label.sr-only(for='emailInput') Email address
						input#emailInput.form-control(type='text', placeholder='Email')
					button.btn.btn-success(type='submit') Sign in

	.jumbotron
		.container
			h1 Welcome
			form#searchForm(role='search')
				.input-group
					.input-group-btn
						button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-expanded='false')
							| All 
							span.caret
						ul.dropdown-menu(role='menu')
							li
								a(href='#') All
							li
								a(href='#') Concert
							li
								a(href='#') TV programs
					input#searchInput.form-control(type='text', placeholder='Search', name='srch-term', autofocus='')
				
					.input-group-btn
						button#btnSearch.btn.btn-default(type='submit')
							i.glyphicon.glyphicon-search
	
	#output
	
	.concertDisplay.container
		button#moreRows.btn.btn-default.btn-block.btn-success
			| See more
		hr
		footer
			p &copy; E3a 2015

	script(src='/javascripts/jquery-1.11.0.min.js')
	script(src='/javascripts/bootstrap.min.js')
	script(src='/javascripts/script.js')