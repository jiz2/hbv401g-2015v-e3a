//MODALS
#aboutProject.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				h4.modal-title About the project
			.modal-body
				p
					Some This project is about making a Meta-search engine for Concerts and TV in Iceland. The user can search for TV and Concerts and book a download or a seat/seats.

			.modal-footer
				button.btn.btn-default(type='button', data-dismiss='modal', aria-label='Close') Close

#viewSeats.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				h4.modal-title Pick available seats
			.modal-body
				p Number of seats picked:
					span#nrOfSeats 0
				table.table.table-bordered(data-toggle='buttons-checkbox' style='width: 100%;')
					thead
						th.col-md-1 #
						each val in ['A','B','C','D','E']
							th= val
					tbody#seatTable
						- var i = 1
						while i < 6
							tr
								td= i++
								-var j = 0
								while j < 5
									- j++
									td
										.btn.btn-block.btn-primary.seatBtn
											span.glyphicon.glyphicon-ok-circle
				p#bnr

			.modal-footer
				button.btn.btn-default(type='button', data-dismiss='modal', aria-label='Close') Close
				button#bookSeats.btn.btn-success(type='button' value='Book seats') Book seats

